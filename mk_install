# !/bin/bash

BASE_DIR=$PWD
CMD_DIR=$BASE_DIR/pktGenCmd
KERN_DIR=$BASE_DIR/pktGenKernMod

EXE_NAME=pktGen
EXE_PATH=/usr/bin

echo ""
echo "Installing Packet Generator....."
cd $KERN_DIR
make
sudo insmod $KERN_DIR/$EXE_NAME.ko
cd $CMD_DIR
make
cd $CMD_DIR/bin
sudo cp $EXE_NAME $EXE_PATH
echo ""
echo "Installation successfull!!"
